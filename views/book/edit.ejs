<form action="/book/update/<%= book.id %>" method="POST">
  <h2>Edit a Book</h2>

  <input value="<%= book.name %>" type="text" placeholder="Name" name="name" /><br />
  <input value="<%= book.email %>" type="text" placeholder="Email" name="email" /><br />
  <input value="<%= book.state %>" type="text" placeholder="State" name="state" /><br />
  <input type="submit" value="Edit book"/>
</form>
